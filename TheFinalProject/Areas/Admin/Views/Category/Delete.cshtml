@model Category

<h4 class="fw-bold px-5 pt-3 m-2"><span class="text-muted fw-light">Category /</span> Delete</h4>
<div class="p-4">
    <div class="d-flex flex-row justify-content-between px-4 pb-4">

        <div class="col-lg-8">
            <h3 class="h3 mb-3">Category Name: <span class="text-info">@Model.Name</span></h3>
        </div>
        <div class="col-lg-4 d-flex align-items-center justify-content-end">
            <a class="btn btn-primary mx-2" asp-action="index" asp-controller="category" asp-area="manage">Go To Home</a>
            <a class="btn btn-danger" asp-action="deleteCategory" asp-controller="category" asp-route-id="@Model.Id" asp-area="manage">Delete</a>
        </div>


    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Products Name</th>
                        <th>Created At</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        <tr>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt?.ToString("dd-MMMM-yyyy")</td>
                            <td>@product.CreatedBy</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>