@model IQueryable<Category>
@{
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category /</span> Index</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="d-flex align-items-center">
            <h5 class="card-header">Category Management</h5>
            @if (User.IsInRole("SuperAdmin"))
            {
                <a class="btn btn-primary text-white" asp-area="manage" asp-controller="category" asp-action="create">Create</a>
            }
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:15%;">Id</th>
                        <th>Name</th>
                        <th>Created By</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (Category category in Model)
                    {
                            count++;
                        <tr>
                            <td style="width:15%;"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                            <td>@category.Name</td>
                            <td>
                                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip"
                                        data-popup="tooltip-custom"
                                        data-bs-placement="top"
                                        class="avatar avatar-xs pull-up"
                                        title="Lilian Fuller">
                                        <img src="~/manage/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                                    </li>

                                </ul>
                            </td>
                            <td><span class="badge bg-label-primary me-1">2023</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="manage" asp-controller="category" asp-action="details" asp-route-id="@category.Id"><i class='bx bx-detail me-1'></i> Detail</a>
                                        <a class="dropdown-item" asp-area="manage" asp-controller="category" asp-action="update" asp-route-id="@category.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        @if (User.IsInRole("SuperAdmin"))
                                        {
                                            <a class="dropdown-item" asp-area="manage" asp-controller="category" asp-action="delete" asp-route-id="@category.Id"><i class="bx bx-trash me-1"></i> Delete</a>

                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>
<!-- / Content -->