@model Address

<form method="post" asp-controller="account" asp-action="addAddress" class="column col-12 g-3">
    <div class="col-md-6 my-3">
        <label asp-for="IsMain" class="form-label">Is Main</label>
        <input asp-for="IsMain" class="form-control">
    </div>
    
    <div class="col-md-6 my-2">
        <label asp-for="Country" class="form-label">Country / Region</label>
        <input asp-for="Country" class="form-control"  >
    </div>
    <div class="col-md-6 my-2">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" class="form-control" placeholder="Azerbaijan">
        <span asp-validation-for="State" class="text text-danger"></span>
    </div>
    <div class="col-md-6 my-2">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" class="form-control">
    </div>
    <div class="col-md-6 my-2">
        <label asp-for="AddressLine" class="form-label">Address</label>
        <input asp-for="AddressLine" class="form-control" >
    </div>
    @*<div class="col-md-6">
            <label for="inputAddress2" class="form-label">Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>*@

    <div class="col-md-6 my-2">
        <label asp-for="PostalCode" class="form-label">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <div class="col-md-6 my-2">
        <label for="inputEmail" class="form-label">Email*</label>
        <input type="email" class="form-control"  >
    </div>

    <div class="checkout ">
        <button type="submit" class="checkout_btn col-md-6">Save Address</button>
    </div>

</form>