@model RegisterVM
<!-- Login - Register -->
<section id="Sign">
    <div class="container">
        <div class="section-container">
            <div class="login-register-wrapper">
                <div class="login-register-tabs">
                    <div class="logreg-tabs">
                        <a class="log-reg-tab-li " asp-controller="account" asp-action="login">Login</a>
                        <a class="log-reg-tab-li log-reg-tab-li-active">Register</a>
                    </div>
                </div>
                <!-- Login Content -->
                <!-- Login Content -->
                <!-- Register Content -->
                <div class="login-register-tab-content login-register-tab-content-active">
                    <form type="post" asp-controller="account" asp-action="register">
                        <div asp-validation-summary="ModelOnly " class="text text-danger"></div>
                        <div class="register-content">
                            <div class="col-12 my-3">
                                <label asp-for="Name" class="form-label">Name</label>
                                <input asp-for="Name" style="background-color: #F6F5F2;" class="form-control">
                                <span asp-validation-for="Name" class="text text-danger"></span>
                            </div>
                            <div class="col-12 my-3">
                                <label asp-for="Surname" class="form-label">Surname</label>
                                <input asp-for="Surname" style="background-color: #F6F5F2;" class="form-control">
                                <span asp-validation-for="Surname" class="text text-danger"></span>

                            </div>
                            <div class="col-12 my-3">
                                <label asp-for="Username" class="form-label">Username*</label>
                                <input asp-for="Username" style="background-color: #F6F5F2;" class="form-control">
                                <span asp-validation-for="Username" class="text text-danger"></span>

                            </div>
                            <div class="col-12 my-3">
                                <label asp-for="Email" class="form-label">Email*</label>
                                <input asp-for="Email" style="background-color: #F6F5F2;" class="form-control">
                                <span asp-validation-for="Email" class="text text-danger"></span>

                            </div>
                            <div class="col-12 my-3">
                                <label asp-for="Password" class="form-label">Password*</label>
                                <input asp-for="Password" style="background-color: #F6F5F2;" class="form-control">
                                <span asp-validation-for="Password" class="text text-danger"></span>

                            </div>
                            <div class="col-12 my-3">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password*</label>
                                <input asp-for="ConfirmPassword" style="background-color: #F6F5F2;" class="form-control">
                                <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>

                            </div>
                            <p>A link to set a new password will be sent to your email address.</p>
                            <p>Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy</p>
                            <button type="submit" class="col-12 my-3 register_btn">Register</button>
                        </div>

                    </form>
                </div>
                <!-- Register Content -->
            </div>
        </div>
    </div>
</section>
<!-- Login - Register -->

