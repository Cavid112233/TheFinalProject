@model List<UserVM>
@{
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> Index</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="d-flex align-items-center">
            <h5 class="card-header">User Management</h5>

        </div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:15%;">Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (UserVM userVM in Model)
                    {
                        count++;
                        <tr>
                            <td style="width:15%;"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                            <td>@userVM.Name</td>
                            <td>@userVM.Surname</td>
                            <td>@userVM.Email</td>
                            <td>@userVM.Username</td>
                            <td>@userVM.RoleName</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="manage" asp-controller="user" asp-action="changeRole" asp-route-userId="@userVM.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item text-danger" asp-area="manage" asp-controller="user" asp-action="blockUser" asp-route-userId="@userVM.Id"><i class='bx bx-block'></i> Block</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>
<!-- / Content -->
